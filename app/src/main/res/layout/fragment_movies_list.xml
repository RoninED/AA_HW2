<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191926">

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="56dp"
        android:contentDescription="@string/temptext"
        android:src="@drawable/point"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/movies_list"
        android:textColor="@color/whiteColorECECEC"
        android:textSize="14dp"
        app:layout_constraintStart_toEndOf="@id/point"
        app:layout_constraintTop_toTopOf="@id/point" />

    <ImageView
        android:id="@+id/bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/bgfilmlist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/point" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movie" app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"        app:layout_constraintTop_toTopOf="@id/bg"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/masklist" app:layout_constraintStart_toStartOf="@id/bg"
        app:layout_constraintEnd_toEndOf="@id/bg"        app:layout_constraintTop_toTopOf="@id/bg"
        />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" app:layout_constraintBottom_toBottomOf="@id/bg"
    android:id="@+id/length"
    android:text="@string/_137_min"
    app:layout_constraintStart_toStartOf="@id/bg"
    android:layout_marginStart="8dp"
    android:layout_marginBottom="8dp"
    android:textColor="#565665"
    android:textStyle="bold"
    android:textSize="10dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" app:layout_constraintBottom_toTopOf="@id/length"
        android:text="@string/avengers_end_game"
        app:layout_constraintStart_toStartOf="@id/bg"
        android:layout_marginStart="8dp"

        android:textColor="@color/whiteColorECECEC"
        android:textStyle="bold"
        android:textSize="12dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
